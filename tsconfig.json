{
    "compilerOptions": {
      "noImplicitAny": true,
      "outDir": "build/types",
      "module": "esnext",
      "target": "es5",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declarationDir": "build/types"
    },
    "include": ["src/**/*.tsx", "src/**/*.ts", "src/components/table/**/*.tsx", "src/components/table/**/*.ts", "src/constants/index.ts", "src/types.ts", "src/index.d.ts", "src/index.tsx"],
    "exclude": ["src/**/tests", "node_modules"]
}